{% extends 'base.html.twig' %}

{% block title 'Show' %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <h2>{{ property.title }}</h2>
                <h3>{{ property.rooms }} pièces - {{ property.surface }} m²</h3>
                <div class="tex-primary" style="font-width: bold; font-size: 2rem">{{ property.formatPrice }} €</div>
                <a href="" class="btn btn-primary">Contactez l'agence</a>
            </div>
        </div>
    </div>



</div>
<div class="container">
    <p>{{ property.description | nl2br }} </p>
   <div class="row">
       <div class="col-md-8">
           <h2>Caractarestiques</h2>
           <table class="table table-striped">
               <tr>
                   <td>Surface habitable </td>
                   <td>{{ property.surface }} m²</td>
               </tr>

               <tr>
                   <td>Pièce</td>
                   <td>{{ property.rooms }} </td>
               </tr>

               <tr>
                   <td>Chembres </td>
                   <td>{{ property.bedrooms }} </td>
               </tr>

               <tr>
                   <td>Etage </td>
                   <td>{{ property.floor }} </td>
               </tr>

               <tr>
                   <td>Chauffage </td>
                   <td>{{ property.heatType }} </td>
               </tr>
           </table>
       </div>

       <div class="col-md-4">
           <h2>Spécifiques</h2>
       </div>
   </div>
</div>

{% endblock %}